@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterNeo.cshtml";
}

@model List<NeoMix.Models.Stream>

@section metatags
{
<meta property="og:url" content="http://mixturadosneo.com" />
<meta property="og:type" content="article" />
<meta property="og:title" content="Mixturados - E-Sports ao seu alcance" />
<meta property="og:description" content="Encontre seu caminho ao Topo" />
<meta property="og:image" content="http://mixturadosneo.com/Images/NeoDesign/Logo.png" />
}

@section MainTitle
{
    <h3 style="font-family: Bariol; color: white; font-size: 32px; line-height: 40px;">STREAMS</h3>
}

@section Images
{
<img src="/Images/NeoDesign/bg/StreamsCapa.png" alt="Mixturados" style="width: 100%; height: 350px; opacity: 0.4;" />
}

<script>
    $(document).ready(function () {
        $(".hide").hide();
    });
</script>

<div class="grid-item twelve masonry-brick" style="top: 0px; left: 0px; height: 50px;">
    <div class="plain box twelve" style="height: 100%;">
        <section>
            <article class="twelve columns sub row shop-categories">
                 <p style="font-size: 20px;">Não encontrou sua Stream? <a style="font-size: 20px; color: #fc7100" href="/home/premium">Vire Premium</a> e ganhe mais destaque.</p>
            </article>
        </section>
    </div>
</div>

@if (Model.Any())
{
    foreach (var n in Model)
    {
    <div class="grid-item four masonry-brick @n.IsPremium.ToString()" style="top: 0px; left: 0px; height: 150px;">
        <div class="plain box twelve" style="border-left: 1px solid #161616; border-top: 1px solid #161616; height: 100%;">
            @if (n.IsPremium)
            {
                <div class="box" style="position: static">
                    <div class="ribbon"><span>Premium</span></div>
                </div>
            }
            <section>
                <span class="bubble">
                    <span>@n.Game</span>
                </span>
                <p></p>
                <article class="twelve columns">
                    <div style="border: 0; margin-right: 5px; width: 25%; position:absolute;">
                        <a class="download-type-icon" style="border-right: solid #ae0f8d;" href="https://twitch.tv/@n.Name">
                            <img style="height: 100px; margin-right: 5px; border-radius: 15px; width: 100px;" src="@n.Logo"></a>
                    </div>
                    <div style="margin-left: 40%;">
                        <h5 style="text-transform: uppercase;">
                           <a href="https://twitch.tv/@n.Name" target="_blank" style="height: 60px;">@n.Title</a>
                        </h5>

                        <h5 style="color: #ae0f8d">
                            @n.Name
                        </h5>
                        <div>
                            <img src="/Images/NeoDesign/StreamsViews.png" style="float: left; margin-right: 5px;" />
                            <span style="color: #ae0f8d">
                                <span>@n.Views</span>
                            </span>
                        </div>
                    </div>
                </article>
            </section>
        </div>
    </div>
    }
}
else
{
    <h2>Não Encontramos nada! =/</h2>
}

