@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterNeo.cshtml";
}

@model List<NeoMix.Models.Post>

@section metatags
{
    <meta property="og:url" content="http://mixturadosneo.com/post" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="Mixturados - E-Sports ao seu alcance" />
    <meta property="og:description" content="Classificados do E-Sports" />
    <meta property="og:image" content="http://mixturadosneo.com/Images/NeoDesign/Logo.png" />
}

@section MainTitle
{
    <h3 style="font-family: Bariol; color: white; font-size: 32px; line-height: 40px;">CLASSIFICADOS</h3>
}

@section Images
{
    <img src="/Images/NeoDesign/bg/CampsImg.png" alt="Mixturados" style="width: 100%; height: 350px; opacity: 0.4;" />
}

<div class="grid-item twelve masonry-brick" style="top: 0px; left: 0px; height: 150px;">
    <div class="plain box twelve" style="height: 100%;">
        <section>
            <header>
                <h3 style="font-size: 35px;">Filtrar</h3>
                <div style="bottom: 10px; position: absolute; right: 1px;">
                    <div class="fb-share-button" data-href="http://mixturadosneo.com/champ" data-layout="button_count"></div>
                </div>
            </header>
            <article class="twelve columns sub no-padding row shop-categories">
                <p></p>
                <nav class="sub no-padding row shop-categories">
                    <ul class="column twelve" id="content-type-filter">
                         <li>
                            <p>Por Jogo:</p>
                        </li>
                        <li>
                            <a href="/home/champs" class="white small">
                                <img style="margin-top: 2px;" title="Todos" src="/Images/NeoDesign/FilterIcons/TodosIcon.png" /></a>
                        </li>
                        <li>
                            <a href="/home/champs?game=lol" class="white small">
                                <img style="margin-top: 2px;" title="League of Legends" src="/Images/NeoDesign/FilterIcons/LOLIcon.png" /></a>
                        </li>
                        <li>
                            <a href="/home/champs?game=hots" class="white small">
                                <img style="margin-top: 2px;" title="Heroes of the Storm" src="/Images/NeoDesign/FilterIcons/HOTSIcon.png" /></a>
                        </li>
                        <li>
                            <a href="/home/champs?game=csgo" class="white small">
                                <img style="margin-top: 2px;" title="Counter Strike Global Offensive" src="/Images/NeoDesign/FilterIcons/CSIcon.png"/></a>
                        </li>
                        <li>
                            <a href="/home/champs?game=hs" class="white small">
                                <img style="margin-top: 2px;" title="Hearthstone" src="/Images/NeoDesign/FilterIcons/HSIcon.png" /></a>
                        </li>
                        <li>
                            <a href="/home/champs?game=RAINBOWSIX" class="white small">
                                <img style="margin-top: 2px;" title="Rainbow 6" src="/Images/NeoDesign/FilterIcons/Rainbow6Icon.png" /></a>
                        </li>
                    </ul>
                </nav>
                <img src="/Images/NeoDesign/ChampListLine.png" style="width: 100%"/>
                <p style="font-size: 15px;">Não encontrou seu evento? <a style="color: #fc7100" href="/home/premium">Vire Premium</a> e ganhe mais destaque.</p>       
            </article>            
        </section>
    </div>
</div>

@if (Model.Any())
{
    foreach (var n in Model)
    {
        if (n.CreateDate != new DateTime(1993, 4, 28))
        {
    <div class="grid-item four masonry-brick @n.IsPremium.ToString()" style="top: 0px; left: 0px; height: 150px; margin-bottom: 5px;">
        <div class="plain box twelve" style="border-left: 1px solid #161616; border-top: 1px solid #161616; height: 100%;">
            @if (n.IsPremium)
            {
                <div class="box" style="position: static">
                    <div class="ribbon"><span>Premium</span></div>
                </div>
            }
            <section>
                <span class="bubble">
                    <span style="text-transform: uppercase;">@n.Tag</span>
                </span>
                <p></p>
                <article class="twelve columns">
                    <div style="border: 0; margin-right: 5px; width: 25%; position:absolute;">
                        <a class="download-type-icon" style="border-right: solid #fc7100;" href="/home/champ?id_champ=@n.Id">
                            <img style="height: 100px; margin-right: 5px; border-radius: 15px; width: 100px;" src="@n.Img"></a>
                    </div>
                    <div style="margin-left: 40%;">
                        <h5 style="color: #fc7100">
                            <a href="/home/champ?id_champ=@n.Id" target="_blank" style="height: 60px;">@n.Title</a>
                        </h5>
                        <div>
                            <img src="/Images/NeoDesign/Calendar.png" style="float: left; margin-right: 5px;" />
                            <span style="color: #fc7100">
                                <span>@n.CreateDate.ToString("dd/MM/yyyy")</span>
                            </span>
                        </div>
                    </div>
                </article>
            </section>
        </div>
    </div>
        }
        else
        {
            if (n.Title == "topo")
            {
    <div class="grid-item twelve masonry-brick" style="top: 0px; left: 0px; height: 150px;">
        <div class="plain box twelve" style="border-left: 1px solid #161616; border-top: 1px solid #161616; height: 100%;">
            <section>
                <article class="twelve columns sub no-padding row shop-categories">
                    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                    <!-- Conteúdo Meio -->
                    <ins class="adsbygoogle"
                        style="display: block"
                        data-ad-client="ca-pub-8858452918865308"
                        data-ad-slot="9988547271"
                        data-ad-format="auto"></ins>
                    <script>
                        (adsbygoogle = window.adsbygoogle || []).push({});
                    </script>
                </article>
            </section>
        </div>
    </div>
            }

            if (n.Title == "interno")
            {
    <div class="grid-item twelve masonry-brick" style="top: 0px; left: 0px; height: 150px;">
        <div class="plain box twelve" style="border-left: 1px solid #161616; border-top: 1px solid #161616; height: 100%;">
            <section>
                <article class="twelve columns sub no-padding row shop-categories">
                    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                    <!-- Conteúdo Meio -->
                    <ins class="adsbygoogle"
                        style="display: block"
                        data-ad-client="ca-pub-8858452918865308"
                        data-ad-slot="9988547271"
                        data-ad-format="auto"></ins>
                    <script>
                        (adsbygoogle = window.adsbygoogle || []).push({});
                    </script>
                </article>
            </section>
        </div>
    </div>
            }
            if (n.Title == "baixo")
            {
    <div class="grid-item twelve masonry-brick" style="top: 0px; left: 0px; height: 150px;">
        <div class="plain box twelve" style="border-left: 1px solid #161616; border-top: 1px solid #161616; height: 100%;">
            <section>
                <article class="twelve columns sub no-padding row shop-categories">
                    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                    <!-- Conteúdo Meio -->
                    <ins class="adsbygoogle"
                        style="display: block"
                        data-ad-client="ca-pub-8858452918865308"
                        data-ad-slot="9988547271"
                        data-ad-format="auto"></ins>
                    <script>
                        (adsbygoogle = window.adsbygoogle || []).push({});
                    </script>
                </article>
            </section>
        </div>
    </div>
            }
        }
    }
}
else
{
    <h2>Desculpe, mas não encontramos nada! =/</h2>
}
<div class="grid-item twelve masonry-brick" style="top: 0px; left: 0px; height: 150px;">
    <div class="plain box twelve" style="border-left: 1px solid #161616; border-top: 1px solid #161616; height: 100%;">
        <section>
            <article class="twelve columns sub no-padding row shop-categories">
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <!-- Bloco Topo -->
                <ins class="adsbygoogle"
                    style="display: block"
                    data-ad-client="ca-pub-8858452918865308"
                    data-ad-slot="8412520073"
                    data-ad-format="auto"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </article>
        </section>
    </div>
</div>