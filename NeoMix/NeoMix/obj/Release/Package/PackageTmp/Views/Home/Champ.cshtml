@{
    ViewBag.Title = "Champ";
    Layout = "~/Views/Shared/_MasterNeo.cshtml";
}

@model NeoMix.Models.Championship

@section metatags
{
    <meta property="og:url" content="http://mixturadosneo.com/home/champ?id_champ=@Model.Id" />
    <meta property="og:type" content="MixturadosNeo" />
    <meta property="og:title" content="@Model.Name" />
    <meta property="og:description" content="Campeonato de @Model.Game" />
    <meta property="og:image" content="@Model.Img" />
}

@section MainTitle
{
    <h3 style="font-family: Bariol; color: white; font-size: 32px; line-height: 40px;">CAMPEONATOS</h3>
}

@section Images
{
<img src="/Images/NeoDesign/bg/CampsImg.png" alt="Mixturados" style="width: 100%; height: 350px; opacity: 0.4;" />
}

<script>
    window.onload = function () {
        ChampsPreview();
        NewsPreview();
    }
    function ChampsPreview() {
        $.ajax({
            type: "POST",
            url: "@Url.Action("ChampsNewsPreview", "Home")",
            datatype: "html",
        success: function (result) {
            $('#ulChampsPreview').html(result);
        }
    });
    }

    function NewsPreview() {
        $.ajax({
            type: "POST",
            url: "@Url.Action("NewsPreview", "News")",
            datatype: "html",
            success: function (result) {
                $('#ulNewsPreview').html(result);
            }
        });
    }

</script>

<div class="row" id="top">
    <div class="twelve no-padding box">
        @if (Model.IsPremium)
        {
            <div class="box" style="position: static">
                <div class="ribbon"><span>Premium</span></div>
            </div>
        }
        <section style="padding-top: 20px;"">
            <article class="twelve columns">
                <div style="width: 30%; border: 0; margin-right: 5px; float:left; width: 30%;">
                    <a href="@Model.Link"><img style="border-radius: 15px; width: 90%;" src="@Model.Img"></a>
                </div>
                <div style="width: 65%; float:left;">
                    <h4 style="text-transform: uppercase;">
                        @Model.Game
                    </h4>
                    <p></p>
                    <h3 style="color: #fc7100">
                        @Model.Name
                    </h3>
                    <p></p>
                    <p></p>
                    <div>
                        <img src="/Images/NeoDesign/Calendar.png" style="float: left; margin-right: 5px;" />
                        <span>
                            <span>@Model.Date.ToString("dd/MM/yyyy")</span>
                        </span>
                    </div>
                    <p></p>
                    <a class="button" style="background-color: #fc7100; border-radius: 5px; width: 120px; font-size: 30px; height: 50px; text-align: center; padding-top: 10px;" href="@Model.Link">Visitar</a>
                    <p></p>
                    <div class="fb-share-button" data-href="http://mixturadosneo.com/champ?id_champ=@Model.Id" data-layout="button_count"></div>
                </div>
            </article>            
        </section>        
    </div>

    <div class="eight no-border columns clear">
        <section class="google-ad-box" style="height: 90px;">
            <div class="google-ad" style="height: 90px;">
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <!-- Bloco Topo -->
                <ins class="adsbygoogle"
                    style="display: block"
                    data-ad-client="ca-pub-8858452918865308"
                    data-ad-slot="8412520073"
                    data-ad-format="auto"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>
        </section>
        <section>
            <div class="fb-comments" data-colorscheme="dark" data-href="http://mixturadosneo.com/news?id_news=@Model.Id" data-numposts="5"></div>
        </section>
    </div>

    <div class="right four sidebar box">
         <section style="padding: 5px; border-radius: 5px;">
            <header style="text-align: center; margin-bottom: 5px;">
                <h3 style="color: #e51c5e !important;">Notícias</h3>
            </header>
            <ul style="width: 100%;" id="ulNewsPreview">
            </ul>
            <footer>
                <a href="/news">
                    <h4 style="color: #e51c5e !important; text-align: center">------ Ver mais ------</h4>
                </a>
            </footer>
        </section>
        <section style="padding: 5px; border-radius: 5px;">
            <header style="text-align: center; margin-bottom: 5px;">
                <h3 style="color: #fc7100 !important;">Campeonatos</h3>
            </header>
            <ul id="ulChampsPreview">
            </ul>
            <footer>
                <a href="/home/champs">
                    <h4 style="color: #fc7100 !important; text-align: center">------ Ver mais ------</h4>
                </a>
            </footer>
        </section>
        <section class="google-ad-box">
            <div class="google-ad" style="width: 300px; height: 604px">
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <!-- Bloco Topo -->
                <ins class="adsbygoogle"
                    style="display: block"
                    data-ad-client="ca-pub-8858452918865308"
                    data-ad-slot="8412520073"
                    data-ad-format="auto"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>
        </section>
    </div>
</div>
</div>
