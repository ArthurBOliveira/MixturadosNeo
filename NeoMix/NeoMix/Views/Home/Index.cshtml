@{
    ViewBag.Title = "Index1";
    Layout = "~/Views/Shared/_MasterNeo.cshtml";
}

@model NeoMix.ViewModel.HomeVM

<style>
    .Premium:hover {
        color: #FFAE00 !important;
    }

    .dimmed {
        content: " ";
        z-index: 10;
        display: block;
        position: absolute;
        height: 100%;
        top: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.5);
    }
</style>

@section metatags
{
    <meta property="og:url" content="http://mixturadosneo.com" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="Mixturados - E-Sports ao seu alcance" />
    <meta property="og:description" content="Encontre seu caminho ao Topo" />
    <meta property="og:image" content="http://mixturadosneo.com/Images/NeoDesign/Logo.png" />
}

@section MainTitle
{
    <div class="full transparent row">
        <div class="column twelve">
            <div class="spotlight" style="background-color: #191818;">
                @foreach (var s in Model.Spotlight)
                {
                    <div class="spotlight-item width-@s.Width height-@s.Height" style="border: solid #333; border-width: 0.5px;">
                        <a href="@s.Link" class="spotlight-info News">
                            <h2 class="Premium" style="background: rgba(0, 0, 0, 0.3);">@s.Title</h2>
                        </a>

                        <figure>
                            <img class="dimmed" src="@s.Img" style="opacity: 0.7;" alt="@s.Title">
                        </figure>
                    </div>
                }
            </div>
        </div>
    </div>
}

@section Images
{
    <img src="/Images/NeoDesign/bg/capa.png" alt="Mixturados" style="width: 100%; height: 350px; opacity: 0.4;">
}

