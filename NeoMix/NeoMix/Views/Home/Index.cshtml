<div class="plain box twelve video-module" style="padding: 0px; border: 0px;">
    <section style="padding: 20px; height: 70px;">
        <div style="width: 40%; float: left">
            <h3 style="color: #e51c5e; font-size: 42px;">Recentes</h3>
        </div>
        <br />
        <div style="width: 100%; float: left">
            <img style="width: 100%; height: 2.1px; margin-top: 15px;" src="~/Images/NeoDesign/NewsLine.png" />
        </div>
    </section>
    @foreach (var n in Model.NewsHot)
    {
        <div class="grid-item four masonry-brick">
            <div class="plain box twelve">
                <section style="height: 335px;">
                    <header>
                        <span class="bubble" style="height: 200px;">
                            <span>@n.NewsType</span>
                        </span>
                        @n.Date.ToString("dd/MM/yyyy")
                    </header>
                    <br />
                    <figure>
                        <a href="/news?id_news=@n.Id">
                            <img style="border-radius: 15px; border: solid #e51c5e;" src="@n.Img" alt="@n.Img">
                        </a>
                    </figure>
                    <article>
                        <h4>
                            <a style="color: #c11b50" href="/news?id_news=@n.Id">@n.Title</a>
                        </h4>
                    </article>
                </section>
            </div>
        </div>
    }
    <section style="width: 100%; border-bottom-style: solid; margin-bottom: 10px; border-color: #e51c5e">
        <a href="/news">
            <h3 style="text-align: center; color: #e51c5e;">Ver mais</h3>
        </a>
    </section>
</div>

<br />
<br />

