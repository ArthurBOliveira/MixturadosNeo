    @foreach (var n in Model)
    {
        <div class="grid-item four masonry-brick">
            <div class="plain box twelve">
                <section style="height: 335px;">
                    <header>
                        <span class="bubble">
                            <span>@n.NewsType</span>
                        </span>
                        <p>@n.Date.ToString("dd/MM/yyyy")</p>
                    </header>
                    <figure>
                        <a href="/news?id_news=@n.Id">
                            <img style="border-radius: 15px; border: solid #e51c5e;" src="@n.Img" alt="@n.Img">
                        </a>
                    </figure>
                    <article>
                        <h4>
                            <a style="color: #c11b50" href="/news?id_news=@n.Id">@n.Title</a>
                        </h4>
                    </article>
                </section>
            </div>
        </div>
    }
